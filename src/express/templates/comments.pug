extends blocks/layout

block content
  include blocks/header
  main.page-content
    section.comments
      .comments__wrapper
        h1.visually-hidden Страница комментариев
        each item in offersForRender
          .comments__block
            .comments__header
              a.announce-card(href="#")
                h2.announce-card__title= item.title
                span.announce-card__info
                  span.announce-card__price= `₽ ${item.sum}`
                  span.announce-card__type= item.type
            ul.comments-list
              each comment in item.comments
                li.js-card
                  .comment-card
                    .comment-card__header
                      a.comment-card__avatar.avatar(href="#")
                        img(src=`/img/${comment.author.avatar}.jpg` srcset=`/img/${comment.author.avatar}@2x.jpg 2x` alt="Аватар пользователя")
                      p.comment-card__author= comment.author.name
                    .comment-card__content
                      p= comment.text
                    button.comment-card__delete.js-delete(type="button") Удалить

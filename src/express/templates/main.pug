extends blocks/layout

block content
  include blocks/header
  main.page-content
    section.categories-list
      h1.visually-hidden Сервис объявлений "Куплю - продам"
      ul.categories-list__wrapper
        each category in categories
          li.categories-list__item
            a.category-tile.category-tile--default(href=`/offers/category/${category.id}`)
              span.category-tile__image
                img(src=`/img/${category.picture.normal}` srcset=`/img/${category.picture.double} 2x` alt="Иконка категории")
              span.category-tile__label= category.name
                |&#32;
                span.category-tile__qty.js-qty= getOffersByCategory(offers, category).length
    section.tickets-list
      h2.visually-hidden Самые новые предложения
      .tickets-list__wrapper
        .tickets-list__header
          p.tickets-list__title Самое свежее
        ul
          each item in freshItems
            li.tickets-list__item
              .ticket-card.ticket-card--color01
                .ticket-card__img
                  img(src=`/img/${item.picture.normal}` srcset=`/img/${item.picture.double} 2x` alt="Изображение товара")
                .ticket-card__info
                  span.ticket-card__label= item.type
                  .ticket-card__categories
                    each category in item.category
                      a(href=`/offers/category/${category.id}`)= category.name
                  .ticket-card__header
                    h3.ticket-card__title
                      a(href=`/offers/${item.id}`)= item.title
                    p.ticket-card__price
                      span.js-sum= item.sum
                      | ₽
                  .ticket-card__desc
                    p= item.description
    section.tickets-list
      h2.visually-hidden Самые обсуждаемые предложения
      .tickets-list__wrapper
        .tickets-list__header
          p.tickets-list__title Самые обсуждаемые
        ul
          each item in mostDiscussedItems
            li.tickets-list__item
              .ticket-card.ticket-card--color09
                .ticket-card__img
                  img(src=`/img/${item.picture.normal}` srcset=`/img/${item.picture.double} 2x` alt="Изображение товара")
                .ticket-card__info
                  span.ticket-card__label= item.type
                  .ticket-card__categories
                    each category in item.category
                      a(href=`/offers/category/${category.id}`)= category.name
                  .ticket-card__header
                    h3.ticket-card__title
                      a(href=`/offers/${item.id}`)= item.title
                    p.ticket-card__price
                      span.js-sum= item.sum
                      | ₽
                  .ticket-card__desc
                    p= item.description
